{
  "name": "level-7-backend",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "NODE_ENV=production pkgroll",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand tests/ --detectOpenHandles --forceExit",
    "test:dev": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --watchAll tests/",
    "test:debug": "NODE_ENV=test node --experimental-vm-modules --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watchAll ./tests/"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.4",
    "@hono/zod-validator": "^0.2.2",
    "@zodyac/zod-mongoose": "^1.1.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.2.0",
    "hono": "^4.4.7",
    "mongoose": "^8.4.3",
    "pkgroll": "^2.1.1",
    "slugify": "^1.6.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.3.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
