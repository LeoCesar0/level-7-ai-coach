{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/types/*"],
      "@routes/*": ["src/routes/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*", "./src/**/*.ts", "**/*.ts"]
}
