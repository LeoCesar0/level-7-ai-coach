{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "@common/*": ["../common/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*",
    "./src/**/*.ts",
    "**/*.ts",
    "**/*.js",
    "src/@schemas/paginateRoute.ts",
    "../common/schemas/pagination.ts"
  ]
}
